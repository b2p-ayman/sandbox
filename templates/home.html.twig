
{% extends "base.html.twig" %}

{% block title %}Accueil{% endblock %}


{% block body %}
<div class="row my-5">
    <div class="col-md-8 mx-auto">
        {% for message in app.flashes("success") %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
        <div class="card text-left">
            <table class="table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Titre</th>
                        <th>Description</th>
                        <th>Ajout√© par</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for file in myFiles %}
                        <tr>
                            <td scope="row">{{ file.id }}</td>
                            <td>{{ file.titre }}</td>
                            <td>{{ file.description }}</td>
                            <td>{{ file.user.username }}</td>
                            <td>
                                <a href="{{ path('file_show',{id:file.id}) }}" class="btn btn-sm btn-primary">
                                    <i class="fa fa-eye"></i>
                                </a>
                                <a href="{{ path('file_edit',{id:file.id}) }}" class="btn btn-sm btn-warning">
                                    <i class="fa fa-edit"></i>
                                </a>
                                <a href="{{ path('file_delete',{id:file.id}) }}" class="btn btn-sm btn-danger">
                                    <i class="fa fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>

            </table>

            <div class="d-flex justify-content-center">
                {{ knp_pagination_render(myFiles) }}
            </div>

        </div>

    </div>
</div>
{% endblock %}